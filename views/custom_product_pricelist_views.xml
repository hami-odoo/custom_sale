<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="custom_product_pricelist_view_form" model="ir.ui.view">
        <field name="name">custom.product.pricelist.view.form</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" name="show_pricelist_product_view" type="object" icon="fa-bars">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Pricelist Item</span>
                        </div>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo> 